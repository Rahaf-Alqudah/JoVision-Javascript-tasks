<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Task 10 - Get IP in Button</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding-top: 100px;
    }
    button {
      font-size: 20px;
      padding: 12px 30px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <button id="getIpBtn" onclick="getIP()">Get IP</button>

  <script>
    function getIP() {
      const btn = document.getElementById("getIpBtn");

      fetch("https://api.ipify.org/")
        .then(response => response.text())
        .then(ip => {
          btn.innerText = ip;
        })
        .catch(error => {
          btn.innerText = "Error!";
          console.error("Error fetching IP:", error);
        });
    }
  </script>

</body>
</html>
