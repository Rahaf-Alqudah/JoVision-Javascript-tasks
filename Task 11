<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Task 11 - Get IP with Error Handling</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding-top: 100px;
    }
    button {
      font-size: 20px;
      padding: 12px 30px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <button id="getIpBtn" onclick="getIP()">Get IP</button>

  <script>
    function getIP() {
      const btn = document.getElementById("getIpBtn");

      fetch("https://api.ipify.org/") 
        .then(response => {
          if (!response.ok) {
            throw new Error("Network response was not ok");
          }
          return response.text();
        })
        .then(ip => {
          btn.innerText = ip;
        })
        .catch(error => {
          alert("An error occurred: " + error.message);
          console.error(error);
        });
    }
  </script>

</body>
</html>
