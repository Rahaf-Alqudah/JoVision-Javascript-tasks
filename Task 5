<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Task 5 - Even Numbers Sum</title>
</head>
<body>
  <button onclick="calculateEvenSum()">Click me</button>
  <p id="result"></p>

  <script>
    function calculateEvenSum() {
      let numbers = [];
      let sum = 0;

      for (let i = 0; i <= 100; i++) {
        numbers.push(i);
        if (i % 2 === 0) {
          sum += i;
        }
      }

      document.getElementById("result").innerText = "Sum of even numbers = " + sum;
    }
  </script>
</body>
</html>
