<head>
  <meta charset="UTF-8">
  <title>Task 13 - Predict Age by Name</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding-top: 100px;
    }
    input {
      padding: 10px;
      font-size: 16px;
      width: 200px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      margin-left: 10px;
    }
  </style>
</head>
<body>

  <input type="text" id="nameInput" placeholder="Enter your name" title="Name" />
  <button onclick="getPredictedAge()">Submit</button>

  <script>
    function getPredictedAge() {
      const name = document.getElementById("nameInput").value.trim();
      if (name === "") {
        alert("Please enter a name!");
        return;
      }

      fetch(`https://api.agify.io/?name=${encodeURIComponent(name)}`)
        .then(response => response.json())
        .then(data => {
          const { name: userName, age: predictedAge } = data;
          alert(`Your name is: ${userName}\nYour age is: ${predictedAge}`);
        })
        .catch(error => {
          console.error("Error fetching age:", error);
          alert("An error occurred while fetching the age.");
        });
    }
  </script>

</body>
</html>
